<h1>
    Customer Signup
</h1>
<div class="form">
    {{#each errorMessages}}
    <div class="alert alert-danger" role="alert">{{this}}</div>
    {{/each}}

    <form method="POST" action="signup">
    <div class="form-group"></div>
    <label for="firstName">First Name</label>
    <input class="form-control" type="text" name="firstName" value={{fNameVal}}>
    <label for="lastName">Last Name</label>
    <input class="form-control" type="text" name="lastName" value={{lNameVal}}>
    <label for="Email">Email</label>
    <input class="form-control" type="email" name="Email" value={{emailVal}}>
    <label for="Password">Password</label>
    <input class="form-control" type="password" name="Password" value={{passVal}}> 
    <input class="btn btn-success" type="submit" value="Sign Up">
    </form>
</div>